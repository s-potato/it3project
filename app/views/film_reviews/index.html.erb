<p id="notice"><%= notice %></p>

<h1>Film Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Film</th>
      <th>Review</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @film_reviews.each do |film_review| %>
      <tr>
        <td><%= film_review.user_id %></td>
        <td><%= film_review.film_id %></td>
        <td><%= film_review.review %></td>
        <td><%= film_review.rate %></td>
        <td><%= link_to 'Show', film_review %></td>
        <td><%= link_to 'Edit', edit_film_review_path(film_review) %></td>
        <td><%= link_to 'Destroy', film_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Film Review', new_film_review_path %>
